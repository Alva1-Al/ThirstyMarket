<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentProductos">


        <ImageView
        android:id="@+id/fragmetproductos_ImageView_foto"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


        <TextView
        android:id="@+id/fragmentproductos_TextView_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nombre Producto"
        android:gravity="center"/>


      <TextView
          android:id="@+id/fragmentproductos_TextView_Precio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Precio Producto"
          android:textSize="20dp"
          android:gravity="center"/>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragmentproductos_TextView_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio Producto"
            android:textSize="20dp"
            android:gravity="center"/>
</androidx.core.widget.NestedScrollView>


</LinearLayout>

